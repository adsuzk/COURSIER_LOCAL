# ============================================
# üéØ REDIRECTIONS ET URLS PROPRES
# ============================================

RewriteEngine On

# üîí PAGE D'ACCUEIL STATIQUE - SUZOSKY 2025
DirectoryIndex index.php

# Forcer HTTPS (d√©sactiv√© temporairement pour diagnostic)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# üéØ REDIRECTIONS INTERFACES PRINCIPALES (conserv√©es)
RewriteRule ^admin/?$ admin.php [L]
RewriteRule ^business/?$ business.php [L]
RewriteRule ^coursier/?$ coursier.php [L]
RewriteRule ^recrutement/?$ recrutement.php [L]

# URL propres sans extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# ============================================
# üîí S√âCURIT√â ET PROTECTION
# ============================================

# Bloquer l'acc√®s aux fichiers sensibles
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak|sql|txt|md)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Prot√©ger les dossiers syst√®me
RedirectMatch 403 ^.*/logs/.*$
RedirectMatch 403 ^.*/FICHIERS_TEMPORAIRES/.*$
RedirectMatch 403 ^.*/CloneCoursierApp/.*$

# ============================================
# ‚ö° OPTIMISATION PERFORMANCES
# ============================================

# Compression GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Cache navigateur optimis√©
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# ============================================
# üéØ HEADERS SEO OPTIMIS√âS
# ============================================

<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header set X-Robots-Tag "index, follow, max-image-preview:large"
    
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg)$">
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
</IfModule>

# ============================================
# üì± PWA ET MOBILE
# ============================================

<Files "sw.js">
    Header set Service-Worker-Allowed "/"
    Header set Cache-Control "public, max-age=0, must-revalidate"
</Files>

<Files "manifest.json">
    Header set Content-Type "application/manifest+json"
</Files>

# ============================================
# üåç LANGUE ET LOCALISATION
# ============================================

DefaultLanguage fr-CI
